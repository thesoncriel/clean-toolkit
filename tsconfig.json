{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"],
  "compilerOptions": {
    "noImplicitAny": true,
    "declaration": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "clean-toolkit": ["src/index"],
      "clean-toolkit/models": ["src/models/index"]
    }
  }
}
